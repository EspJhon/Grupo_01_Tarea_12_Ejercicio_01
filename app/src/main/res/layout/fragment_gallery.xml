<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MI PERFIL"
            android:gravity="center"
            android:textSize="50sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:     "
                android:textSize="18sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/et_nombreP"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAVID JARA ALVARADO"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario:     "
                android:textSize="18sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/et_UsuarioP"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAVID JARA ALVARADO"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: "
                android:textSize="18sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:id="@+id/et_passwordP"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAVID JARA ALVARADO"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi direccion de envÃ­o"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_direccion1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Direccion 1"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_direccion1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EDITAR"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_direccion2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Direccion 2"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_direccion2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EDITAR"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_direccion3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Direccion 3"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_direccion3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EDITAR"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_actualizarC"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR"/>

    </LinearLayout>

</LinearLayout>
